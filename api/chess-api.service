[Unit]
Description=Chess API
After=syslog.target network.target
User=www-data
Type=simple

[Service]
ExecStart=/usr/bin/java -Xmx64m -Xms64m -Xss256k -XX:+UnlockExperimentalVMOptions -XX:+UseCGroupMemoryLimitForHeap -jar /opt/chess/api/chess-latest.jar --server.port=8081
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=chess-api

[Install]
WantedBy=multi-user.target